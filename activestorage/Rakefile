# frozen_string_literal: true

require "bundler/setup"
require "bundler/gem_tasks"
require "rake/testtask"

Rake::TestTask.new do |test|
  test.libs << "app/controllers"
  test.libs << "test"
  test.test_files = FileList["test/**/*_test.rb"]
  test.verbose = true
  test.warning = false
end

task :package

task default: :test
