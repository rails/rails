<tr class='route_row' data-helper='path'>
  <td data-route-name='<%= route[:name] %>'>
    <% if route[:name].present? %>
      <%= route[:name] %><span class='helper'>_path</span>
    <% end %>
  </td>
  <td>
    <%= route[:verb] %>
  </td>
  <td data-route-path='<%= route[:path] %>'>
    <%= route[:path] %>
  </td>
  <td>
    <%
      editor = ActiveSupport::Editor.current
      action_file = route[:action_source_file]
      action_line = route[:action_source_line]
    %>
    <% if editor && action_file && action_line %>
      <%= link_to("âœï¸", editor.url_for(action_file, action_line), class: "edit-icon") %>
    <% end %>
    <%= route[:reqs] %>
  </td>
  <td>
    <%=simple_format route[:source_location] %>
  </td>
</tr>
