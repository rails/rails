/config/initializers/secret_token.rb
/config/*.yml

# Ignore bundler config
/.bundle

# Ignore other VC directories
/.svn

# Ignore testing and documentation files
/test/tmp
/coverage
/.yardoc
/rdoc

# Ignore the default SQLite database.
/db/*.sqlite3

# Ignore all logfiles and tempfiles.
/log/*.log
/tmp
